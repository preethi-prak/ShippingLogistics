@page
@model IndexModel
@{
    ViewData["Title"] = "Bootstrap Razor Page";
    var country_code = "FR";
    var shipping_price = 800;

}

<div class="container-fluid mt-5">
    <!-- Row 1 -->
    <div class="row">
        <!-- Column 1 -->
        <div class="col-md-10">
           
        </div>
        <!-- Column 2 -->
        <div class="col-md-2">
            <label for="country">Country : </label>
             <!-- API Call -->
            <label id="country-code" for="code">@country_code</label> 
        </div>
    </div>

    <!-- Row 2 -->
    <div class="row gx-5">
        <!-- Column 1 -->
        <div class="col-md-8">
            <!-- Hero Image -->
            <div class="jumbotron hero-image">
                
            </div>
        </div>
        <!-- Column 2 -->
        <div class="col-md-4">
            <!-- Row 1 in Column 2 -->
            <div class="row gx-5">
                <div class="col">
                    <textarea id="BidPriceTextArea" class="form-control" rows="1" readonly>Bid Price: 2400</textarea>
                </div>
            </div>
            <!-- Row 2 in Column 2 -->
            <div class="row gx-5">
                <div class="col">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#bidModal">Place Bid</button>
                </div>
            </div>
            <!-- Row 3 in Column 2 -->
            <div class="row gx-5">
                <div class="col-md-12">
                    <label for="shippingOption"><strong>Shipping Option </strong></label>
                    
                </div>
            </div>
            
            <div class="row gx-5">
                <div class="col-md-8">
        
                    <label for="DeliverToYard">Delivery to your Yard:</label>
                     
                </div>
                <div class="col-md-4">
                    <label>@shipping_price</label>
                </div>
                 
            </div>
            <div class="row gx-5">
                <div class="col-md-8"></div>
                <div class="col-md-4">
                    <a href="#" data-toggle="modal" data-target="#shippingModal">Update</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bid Modal -->
<div class="modal fade" id="bidModal" tabindex="-1" role="dialog" aria-labelledby="bidModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bidModalLabel">Bid Modal Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Bid Modal Content -->
                <!-- Add your content for the Bid modal here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Shipping Modal -->
<div class="modal fade" id="shippingModal" tabindex="-1" role="dialog" aria-labelledby="shippingModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="shippingModalLabel">Shipping Modal Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Shipping Modal Content -->
                <!-- Add your content for the Shipping modal here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // JavaScript code to open Bid and Shipping modals
        $(document).ready(function () {
            // Open Bid modal on button click
            $('#bidModalBtn').click(function () {
                $('#bidModal').modal('show');
            });

            // Open Shipping modal on link click
            $('#shippingModalLink').click(function () {
                $('#shippingModal').modal('show');
            });
        });
    </script>
}
